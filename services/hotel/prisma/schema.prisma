generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Hotel {
  id              String  @id @default(cuid())
  name            String
  address         String
  city            String
  country         String
  description     String
  facilities      String
  guest_number    String
  price_per_night Int
  start_rating    Int
  images          Image[]
}

model Image {
  id       String @id @default(cuid())
  hotel_id String
  hotel    Hotel  @relation(fields: [hotel_id], references: [id])
  image    String
}
